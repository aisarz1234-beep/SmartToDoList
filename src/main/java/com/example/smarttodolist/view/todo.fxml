<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.smarttodolist.controller.TodoController">
    <top>
        <VBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 15;">
            <Label text="Smart To-Do List" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333;">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>

                <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Due Date:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <DatePicker fx:id="dueDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <ComboBox fx:id="categoryComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Priority:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <ComboBox fx:id="priorityComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </GridPane>

            <HBox spacing="10">
                <Button fx:id="addButton" text="Add Task" onAction="#handleAddTask" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                <Button fx:id="updateButton" text="Update Task" onAction="#handleUpdateTask" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
                <Button fx:id="deleteButton" text="Delete Task" onAction="#handleDeleteTask" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 15;">
            <Label text="Tasks:" style="-fx-font-size: 18; -fx-font-weight: bold;" />
            <TableView fx:id="taskTableView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="completedColumn" text="Status" prefWidth="80">
                        <cellValueFactory>
                            <PropertyValueFactory property="completed" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="titleColumn" text="Title" prefWidth="150">
                        <cellValueFactory>
                            <PropertyValueFactory property="title" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200">
                        <cellValueFactory>
                            <PropertyValueFactory property="description" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="100">
                        <cellValueFactory>
                            <PropertyValueFactory property="dueDate" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="categoryColumn" text="Category" prefWidth="100">
                        <cellValueFactory>
                            <PropertyValueFactory property="category" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="priorityColumn" text="Priority" prefWidth="80">
                        <cellValueFactory>
                            <PropertyValueFactory property="priority" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>



